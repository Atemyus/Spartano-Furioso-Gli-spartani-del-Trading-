generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  email                     String    @unique
  password                  String
  name                      String?
  role                      String    @default("USER") // USER, ADMIN
  isActive                  Boolean   @default(true)
  status                    String    @default("pending") // pending, active, suspended
  emailVerified             Boolean   @default(false)
  verificationToken         String?
  verificationTokenExpiry   DateTime?
  resetPasswordToken        String?
  resetPasswordExpiry       DateTime?
  registrationIP            String?
  deviceHash                String?
  lastLogin                 DateTime?
  createdAt                 DateTime  @default(now())
  trials                    Trial[]
  
  @@index([role])
  @@index([verificationToken])
  @@index([resetPasswordToken])
  @@map("users")
}

model Trial {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId     String
  productName   String
  startDate     DateTime
  endDate       DateTime
  status        String   @default("active") // active, expired, cancelled
  trialDays     Int      @default(60)
  activationIP  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId, status])
  @@index([productId])
  @@map("trials")
}

model Newsletter {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String?
  status      String   @default("ACTIVE") // ACTIVE, UNSUBSCRIBED
  source      String   @default("footer") // footer, popup, landing
  subscribedAt DateTime @default(now())
  unsubscribedAt DateTime?
  
  @@index([status])
  @@map("newsletters")
}

model NewsletterMessage {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  subject     String
  content     String   // HTML content
  type        String   @default("promotional") // promotional, educational, announcement
  status      String   @default("draft") // draft, scheduled, sent
  scheduledFor DateTime?
  sentAt      DateTime?
  recipientCount Int   @default(0)
  openCount   Int      @default(0)
  clickCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status])
  @@index([scheduledFor])
  @@map("newsletter_messages")
}

model Product {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  productId         String   @unique // spartan_fury_bot, etc.
  name              String
  description       String
  price             Float
  originalPrice     Float?
  currency          String   @default("eur")
  pricingPlans      Json     // { monthly: {...}, yearly: {...}, lifetime: {...} }
  features          String[]
  requirements      String[]
  platforms         String[]
  metrics           Json?    // { winRate: 87, avgProfit: 22.3, ... }
  stripeProductId   String?
  stripePriceId     String?
  type              String   // subscription, one-time
  interval          String?  // month, year
  trialDays         Int      @default(60)
  active            Boolean  @default(true)
  popular           Boolean  @default(false)
  badge             String?
  badgeColor        String?
  category          String
  image             String?
  comingSoon        Boolean  @default(false)
  launchDate        String?
  courseModules     Json?    // Per SPARTAN ACADEMY
  totalModules      Int?
  totalLessons      Int?
  totalDuration     String?
  trialModules      Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([category])
  @@index([active])
  @@map("products")
}

model Order {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  amount          Float
  currency        String   @default("eur")
  items           Json     // Array of items
  status          String   @default("pending") // pending, completed, failed, cancelled
  notes           String?
  stripeSessionId String?
  stripePaymentId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([stripeSessionId])
  @@map("orders")
}

model Subscription {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @db.ObjectId
  productId             String
  status                String   @default("active") // active, cancelled, expired
  stripeSubscriptionId  String?  @unique
  stripeCustomerId      String?
  startDate             DateTime
  endDate               DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([userId])
  @@index([productId])
  @@index([status])
  @@map("subscriptions")
}

